{
  "name": "seneca-browser",
  "version": "3.0.2",
  "description": "Seneca for the browser.",
  "main": "seneca-browser.js",
  "scripts": {
    "test": "jest --coverage",
    "test-some": "jest -t",
    "test-watch": "jest --coverage --watchAll",
    "prettier": "prettier --write --no-semi --single-quote seneca-browser-src.js test/*.js",
    "browserify-prod": "browserify --full-paths -g uglifyify -o seneca-browser.js -e seneca-browser-src.js -s Seneca",
    "browserify-test": "browserify -o seneca-browser.js -e seneca-browser-src.js -s Seneca",
    "build": "yarn run browserify-prod",
    "smoke": "node smoke/server.js",
    "reset": "yarn run clean && yarn install && yarn test",
    "clean": "rm -rf node_modules package-lock.json yarn.lock",
    "repo-tag": "REPO_VERSION=`node -e \"console.log(require('./package').version)\"` && echo TAG: v$REPO_VERSION && git commit -a -m v$REPO_VERSION && git push && git tag v$REPO_VERSION && git push --tags",
    "repo-publish": "yarn run clean && yarn i --registry https://registry.npmjs.org && yarn run repo-publish-quick",
    "repo-publish-quick": "yarn run prettier && yarn run build && yarn test && yarn run repo-tag && yarn publish --access public --registry https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voxgig/seneca-browser.git"
  },
  "author": "Richard Rodger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/voxgig/seneca-browser/issues"
  },
  "homepage": "https://github.com/voxgig/seneca-browser#readme",
  "devDependencies": {
    "@hapi/wreck": "17",
    "@seneca/gateway": "^0.4.0",
    "@seneca/gateway-express": "^0.3.0",
    "browserify": "^17.0.0",
    "browserify-fs": "^1.0.0",
    "browserify-header": "^1.1.0",
    "express": "^4.18.1",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "seneca": "senecajs/seneca#p4.0.0-t.1.p.1",
    "seneca-promisify": "^2.4.1",
    "timers": "^0.1.1",
    "tinyify": "^3.0.0",
    "uglifyify": "^5.0.2",
    "util.promisify": "^1.1.1"
  },
  "files": [
    "README.md",
    "LICENSE",
    "seneca-browser.js"
  ]
}
